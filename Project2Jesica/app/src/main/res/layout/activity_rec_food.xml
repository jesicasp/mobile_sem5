<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RecFoodActivity">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="horizontal">

        <!--<ImageView android:id="@+id/headerRec"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/softcake"
            android:scaleType="center"/>-->

        <TextView android:id="@+id/titleRec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar Menu Makanan"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recFood"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_below="@id/titleRec"
            android:layout_marginEnd="20dp"
            tools:listitem="@layout/food_rec_item"/>

    </RelativeLayout>
    </androidx.cardview.widget.CardView>
