<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardElevation="25dp"
        app:cardCornerRadius="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageBarang"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:src="@drawable/logo"/>

            <TextView
                android:id="@+id/txtNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_toRightOf="@id/imageBarang"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/txtKeterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AMD Ryzenâ„¢ 7 processor; Windows 11 Home Single Language; 13.3 inch with AMD Radeon; 16 GB RAM; 512 GB SSD Hard drive; Backlit Keyboard,Fingerprint reader,"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_toRightOf="@id/imageBarang"
                android:layout_below="@+id/txtNama"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/txtHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga : Rp xx.xxx"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_toRightOf="@id/imageBarang"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/txtKeterangan"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/txtPromo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promo Rp xx.xxx"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_toRightOf="@id/imageBarang"
                android:layout_below="@+id/txtHarga"
                android:layout_marginTop="5dp"
                android:layout_marginStart="100dp"
                android:drawableLeft="@android:drawable/btn_star_big_on"/>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>